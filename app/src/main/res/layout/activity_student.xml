<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoutButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/log_out"
    android:elevation="10dp"
    android:contentDescription="Logout"
    android:clickable="true"
    android:focusable="true"/>


    <ImageView
    android:id="@+id/notificationIcon"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="60dp"
    android:layout_marginEnd="40dp"
    android:src="@drawable/notification"
    android:elevation="10dp"
    android:contentDescription="Notifications" />

    <!-- ðŸ”· Profile Card with rounded bottom corners -->
    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/rounded_bottom_card"
        android:orientation="horizontal"
        android:padding="28dp">

        <!-- Student Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingStart="25dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/student_icon"
            android:background="@drawable/circle_bg"
            android:scaleType="centerCrop" />

        <!-- Student Info: Name, Roll No, Dept -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="70dp">

            <TextView
                android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/studentRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll No: 123"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/studentDept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department: IT"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- âœ… Marked Present Message (Hidden by default in Java) -->
    <TextView
        android:id="@+id/markedPresentText"
        android:layout_below="@id/profileCard"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ… Marked Present for Java - FYIT-A"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:visibility="gone"
        android:textColor="@color/green" />

    <!-- ðŸ“‹ Previous Attendance Label -->
    <TextView
        android:id="@+id/previousLabel"
        android:layout_below="@id/markedPresentText"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Previous Attendance"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:textColor="@color/blue_primary" />

    <!-- ðŸ§¾ List of previous attendance -->
    <GridView
        android:id="@+id/calendarGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/previousLabel"
        android:layout_margin="16dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:columnWidth="60dp"
        android:stretchMode="columnWidth"
        />

</RelativeLayout>